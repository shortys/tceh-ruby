<%= simple_form_for(@checkboxed_model) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :music, collection: ['electro', 'punk', 'hardcore', 'techno'], as: :check_boxes, :include_hidden => false  %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
